<resources>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppBottomSheetDialogThemeDark" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/white_100</item>
        <item name="android:textColor">@color/black_100</item>
    </style>

    <style name="AlertDialogStyleDark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/black_100</item>
        <item name="android:textColor">@color/white_100</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_bottom_sheet_dialog</item>
    </style>

    <style name="BoldText">
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="MediumText">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="BoldText.CardTitle" parent="BoldText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BoldText.Title" parent="BoldText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black_70</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MediumText.DescriptionTitle" parent="MediumText">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="BoldText.DescriptionExpanded" parent="BoldText">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_70</item>
    </style>

    <style name="BoldText.DescriptionExpandedShadowed" parent="BoldText">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_100</item>
        <item name="android:shadowRadius">24</item>
        <item name="android:shadowColor">@color/black_70</item>
    </style>

    <style name="BoldText.Subtitle" parent="Subtitle1">
        <item name="android:textColor">@color/white_100</item>
    </style>

    <style name="MediumText.Subtitle" parent="Subtitle2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_100</item>
    </style>

    <style name="BoldText.Error" parent="BoldText">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_80</item>
    </style>

    <!-- Needed to hide uncustomizable native text -->
    <style name="TransparentText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00000000</item>
    </style>

    <style name="CondensedBase" parent="BaseTheme">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="Subtitle1" parent="CondensedBase">
        <item name="android:textColor">?attr/colorAccented</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.035625</item>
    </style>

    <style name="H3Heading" parent="CondensedBase">
        <item name="android:letterSpacing">0.0357</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Subtitle2" parent="CondensedBase">
        <item name="android:textColor">?attr/colorAccented</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.035</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="Body2" parent="CondensedBase">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.1875</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>

    <style name="Caption" parent="Subtitle2">
        <item name="android:textSize">12sp</item>
    </style>

</resources>
